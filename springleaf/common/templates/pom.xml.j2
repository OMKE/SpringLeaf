<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>{{ data.version }}</version>
		<relativePath/> <!-- lookup parent from repository -->
	</parent>
	<groupId>{{ data.groupId }}</groupId>
	<artifactId>{{ data.artifact }}</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>{{ data.packaging }}</packaging>
	<name>{{ data.name }}</name>
	<description>{{ data.description }}</description>

	<properties>
		<java.version>{{ data.java_version }}</java.version>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
		</dependency>

		{# @TODO - Fix indendation on closing dependency tag #}
		{% for dep in data.dependencies -%}
		<dependency>
			{% for attr in dep.attributes -%}
			<{{attr.name}}>{{attr.value}}</{{attr.name}}> 
			{% endfor -%}
		</dependency>
		{% endfor %}

		<dependency>
      		<groupId>org.springframework.boot</groupId>
      		<artifactId>spring-boot-starter-tomcat</artifactId>
      		<scope>provided</scope>
    	</dependency>

		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-test</artifactId>
			<scope>test</scope>
			<exclusions>
				<exclusion>
					<groupId>org.junit.vintage</groupId>
					<artifactId>junit-vintage-engine</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

		
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</build>

</project>
